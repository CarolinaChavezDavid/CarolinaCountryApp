<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/keyValueLayout"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/symbol_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/symbol_height"
            android:src="@drawable/ic_twotone_scatter_plot_24"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/countryParameterTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/country_item_capital_title"
            style="@style/country_card_titles_style"
            android:gravity="center_horizontal"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/countryValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country_item_capital_example"
            style="@style/country_card_values_style"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_weight="2"/>

        <ImageView
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/symbol_height"
            android:src="@drawable/ic_twotone_scatter_plot_24"
            android:rotationY="180"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:src="@drawable/ic_separador_banner"
        app:layout_constraintTop_toBottomOf="@+id/keyValueLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
